{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "regexManagers:dockerfileVersions",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "node"
            ],
            "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
            "versioning": "node"
        }
    ]
}
