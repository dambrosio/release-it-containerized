{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "regexManagers:dockerfileVersions",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "node"
            ],
            "versioning": "node",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ]
        }
    ]
}
